{
  "manifest_version": 3,
  "name": "MailGenie",
  "version": "1.1",
  "description": "多言語メールを自動生成し、さまざまなトーンに対応。",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:5000/*"], 
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
  }
}
